{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "pr"
  ],
  "assignees": ["stijn-geerts"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "automergeType" : "pr-comment"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "prConcurrentLimit": 3
}
