{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
    ],
  "assignees": ["stijn-geerts"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "prConcurrentLimit": 3,
  "schedule": [
    "after 10pm",
    "before 5am"
  ]
}
